<p class="mv3 code"><span class="b mr2">Code:</span><span class="tracked o-70">{{@deck.code}}</span></p>
<div class="code flex-l justify-between">
<div>
  {{#if @deck.champions.length}}
    <div class="pv2">
      <h4 class="center">Champions</h4>
      <ul class="list pl0 center">
        {{#each @deck.champions as |card|}}
        <li role="button" class="pv2 bn br1 pa1 ma1 flex justify-between items-center bg-{{card.regionRef}}" {{on "mouseenter" (fn (mut card.visible) true)}} {{on "mouseleave" (fn (mut card.visible) false)}}>
          {{#if card.visible}}
            <img src="{{get (get card.assets 0) 'gameAbsolutePath'}}" class="z-999 db-l dn absolute w5 fl push-right" alt="{{card.name}}"/>
          {{/if}}
                <span class="db"><span class="code white-50">({{card.cost}})</span> {{card.name}} <span class="white-50 i">x{{card.count}}</span></span>
          <div class="ml3">
            {{#each card.regionRefs as |region|}}<img class="" src="/images/{{region}}.png" width="32px" height="auto" alt={{region}}/>{{/each}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
  {{#if @deck.landmarks.length}}
    <div class="pv2">
      <h4 class="center">Landmarks</h4>
      <ul class="list pl0 center">
        {{#each @deck.landmarks as |card|}}
        <li role="button" class="pv2 bn br1 pa1 ma1 flex justify-between items-center bg-{{card.regionRef}}" {{on "mouseenter" (fn (mut card.visible) true)}} {{on "mouseleave" (fn (mut card.visible) false)}}>
          {{#if card.visible}}
            <img src="{{get (get card.assets 0) 'gameAbsolutePath'}}" class="z-999 db-l dn absolute w5 fl push-right" alt="{{card.name}}"/>
          {{/if}}
                <span class="db"><span class="code white-50">({{card.cost}})</span> {{card.name}} <span class="white-50 i">x{{card.count}}</span></span>
          <div class="ml3">
            {{#each card.regionRefs as |region|}}<img class="" src="/images/{{region}}.png" width="32px" height="auto" alt={{region}}/>{{/each}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
</div>
{{#if @deck.followers.length}}
  <div>
  <h4 class="center">Followers</h4>
  <ul class="list pl0 center">
    {{#each @deck.followers as |card|}}
    <li role="button" class="pv2 bn br1 pa1 ma1 flex justify-between items-center bg-{{card.regionRef}}" {{on "mouseenter" (fn (mut card.visible) true)}} {{on "mouseleave" (fn (mut card.visible) false)}}>
      {{#if card.visible}}
        <img src="{{get (get card.assets 0) 'gameAbsolutePath'}}" class="z-999 db-l dn absolute w5 fl push-left" alt="{{card.name}}"/>
      {{/if}}
        <span class="db"><span class="code white-50">({{card.cost}})</span> {{card.name}} <span class="white-50 i">x{{card.count}}</span></span>
        <div class="ml3">
          {{#each card.regionRefs as |region|}}<img class="" src="/images/{{region}}.png" width="32px" height="auto" alt={{region}}/>{{/each}}
        </div>
    </li>
    {{/each}}
  </ul>
</div>
{{/if}}
{{#if @deck.spells.length}}
  <div>
  <h4 class="center">Spells</h4>
  <ul class="list pl0 center">
    {{#each @deck.spells as |card|}}
    <li role="button" class="pv2 bn br1 pa1 ma1 flex justify-between items-center bg-{{card.regionRef}}" {{on "mouseenter" (fn (mut card.visible) true)}} {{on "mouseleave" (fn (mut card.visible) false)}}>
      {{#if card.visible}}
        <img src="{{get (get card.assets 0) 'gameAbsolutePath'}}" class="z-999 db-l dn absolute w5 fl push-left" alt="{{card.name}}"/>
      {{/if}}
            <span class="db"><span class="code white-50">({{card.cost}})</span> {{card.name}} <span class="white-50 i">x{{card.count}}</span></span>
          <div class="ml3">
            {{#each card.regionRefs as |region|}}<img class="" src="/images/{{region}}.png" width="32px" height="auto" alt={{region}}/>{{/each}}
          </div>
    </li>
    {{/each}}
  </ul>
</div>
{{/if}}
</div>
