      <img class="db" src="assets/images/{{trim card.region}}.png" width="32px" height="auto" />
    </li>
    {{/each}}
  </ul>
{{/if}}
{{#if @deck.spells.length}}
  <h4 class="center measure">Spells</h4>
  <ul class="list pl0 measure center">
    {{#each @deck.spells as |card|}}
